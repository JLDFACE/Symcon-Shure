{
  "elements": [
    {
      "type": "ExpansionPanel",
      "caption": "Automatische Erkennung (Scan)",
      "items": [
        {
          "type": "ValidationTextBox",
          "name": "ScanSubnet",
          "caption": "Scan Subnetz (CIDR, z. B. 192.168.1.0/24)"
        },
        {
          "type": "NumberSpinner",
          "name": "Port",
          "caption": "Port",
          "minimum": 1,
          "maximum": 65535
        }
      ]
    },
    {
      "type": "ExpansionPanel",
      "caption": "Manuelles Hinzufügen",
      "items": [
        {
          "type": "ValidationTextBox",
          "name": "ManualIP",
          "caption": "IP-Adresse (z. B. 192.168.1.100)"
        },
        {
          "type": "NumberSpinner",
          "name": "ManualPort",
          "caption": "Port",
          "minimum": 1,
          "maximum": 65535
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Button",
      "caption": "Scan starten",
      "onClick": "SLXD_Scan($id);"
    },
    {
      "type": "Button",
      "caption": "Manuell hinzufügen",
      "onClick": "SLXD_AddManual($id);"
    },
    {
      "type": "Configurator",
      "name": "DeviceList",
      "caption": "Gefundene SLX-D/QLX-D Receiver",
      "delete": true,
      "columns": [
        { "label": "IP", "name": "IP", "width": "120px" },
        { "label": "Model", "name": "Model", "width": "100px" },
        { "label": "Family", "name": "Family", "width": "120px" },
        { "label": "Device ID", "name": "DeviceID", "width": "150px" },
        { "label": "Firmware", "name": "Firmware", "width": "100px" },
        { "label": "Channels", "name": "Channels", "width": "80px" }
      ],
      "values": []
    }
  ]
}
